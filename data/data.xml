        </record>

        <record id="workshop_ticket_stage_4" model="workshop.ticket.stage">
            <field name="sequence">4</field>
            <field name="name">Hold</field>
        </record>

        <record id="workshop_ticket_stage_5" model="workshop.ticket.stage">
            <field name="sequence">5</field>
            <field name="name">Close</field>
        </record>
    </data>
