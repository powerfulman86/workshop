<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="machine_kanban" model="ir.ui.view">
            <field name="name">res.machine</field>
            <field name="model">res.machine</field>
            <field name="arch" type="xml">
                <kanban class="o_hr_employee_kanban">
                    <field name="id"/>
                    <field name="name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_hr_kanban_record">
                                <field name="image" widget="image"
                                       class="o_kanban_image_fill_left"
                                       options="{'zoom': true, 'background': true, 'preventClicks': false}"/>

                                <div class="oe_kanban_details">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <div class="float-right" t-if="record.code">
                                                    <span class="fa fa-circle text-warning" role="img" aria-label="code"
                                                          title="code"
                                                          name="code"/>
                                                </div>
                                                <field name="name" placeholder="Employee's Name"/>
                                            </strong>
                                            <span t-if="record.partner_id" class="o_kanban_record_subtitle">
                                                <field name="partner_id"/>
                                            </span>
                                        </div>
                                    </div>
                                    <!--                                    <ul>-->
                                    <!--                                        <li id="last_login"/>-->
                                    <!--                                        <li t-if="record.work_email.raw_value" class="o_text_overflow">-->
                                    <!--                                            <field name="work_email"/>-->
                                    <!--                                        </li>-->
                                    <!--                                        <li t-if="record.work_phone.raw_value">-->
                                    <!--                                            <field name="work_phone"/>-->
                                    <!--                                        </li>-->
                                    <!--                                    </ul>-->
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="machine_view_form" model="ir.ui.view">
            <field name="name">machine_view_form</field>
            <field name="model">res.machine</field>
            <field name="arch" type="xml">
                <form string="machine_form">
                    <sheet>
                        <field name="image" widget="image" class="oe_avatar"/>

                        <div class="oe_title">
                            <label for="name" string="Name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="description"/>
                                <field name="partner_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="_view_tree" model="ir.ui.view">
            <field name="name">_view_tree</field>
            <field name="model">res.machine</field>
            <field name="arch" type="xml">
                <tree string="_tree">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="description"/>
                    <field name="partner_id"/>
                </tree>
            </field>
        </record>

        <record id="machine_action" model="ir.actions.act_window">
            <field name="name">Machine</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.machine</field>
            <field name="view_mode">kanban,tree,pivot,graph,form</field>
        </record>
        <menuitem id="machine_menu" name="Machine" action="machine_action" parent="work_order_settings"/>
    </data>
</odoo>