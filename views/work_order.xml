<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="work_order_view_tree" model="ir.ui.view">
            <field name="name">work_order_view_tree</field>
            <field name="model">work.order</field>
            <field name="arch" type="xml">
                <tree string="work_order_tree">
                    <field name="name"/>
                    <field name="stage_id"/>
                </tree>
            </field>
        </record>
        <record id="work_order_view_form" model="ir.ui.view">
            <field name="name">work_order_view_form</field>
            <field name="model">work.order</field>
            <field name="arch" type="xml">
                <form string="work_order_form">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="stage_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="work_order_kanban" model="ir.ui.view">
            <field name="name">work.order</field>
            <field name="model">work.order</field>
            <field name="arch" type="xml">
                <kanban default_group_by="stage_id" class="o_kanban_small_column o_kanban_project_tasks"
                        on_create="quick_create" quick_create_view="workshop.work_order_view_form" examples="project">
                    <field name="id"/>
                    <field name="name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="o_kanban_project_phases oe_kanban_global_click"
                                 t-attf-style="height:100px;">
                                <div class="oe_kanban_details">
                                    <h4 class="mt0 mb0">
                                        <field name="name"/>
                                    </h4>
                                    <strong class="o_kanban_record_title">
                                        <field name="stage_id"/>
                                    </strong>
                                    <p class="o_kanban_record_title">
                                        <field name="name"/>
                                    </p>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="work_order_action" model="ir.actions.act_window">
            <field name="name">Work Order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">work.order</field>
            <field name="view_mode">kanban,tree,pivot,graph,form</field>
        </record>

        <record id="stages_view_tree" model="ir.ui.view">
            <field name="name">stages_view_tree</field>
            <field name="model">work.order.stage</field>
            <field name="arch" type="xml">
                <tree editable="bottom" string="stages_tree">
                    <field name="name"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        <record id="stages_action" model="ir.actions.act_window">
            <field name="name">Work Order Stage</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">work.order.stage</field>
            <field name="view_mode">tree</field>
        </record>
        <menuitem id="stage_menu" name="Stages" action="stages_action" parent="work_order_settings"/>

        <menuitem id="work_order_menu" name="Work Shop" parent="work_order_root"/>
        <menuitem id="work_order_child" name="Work Order" parent="work_order_menu" action="work_order_action"/>
    </data>
</odoo>