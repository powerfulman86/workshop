    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="menu_models"
              name="Models"
              parent="workshop_warehouse_config" sequence="7"
              action="action_models"/>

    <!--product-->
    <record id="view_product_magento_form" model="ir.ui.view">
        <field name="name">view.product.brand.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <field name='brand_id' groups="stock.group_stock_manager"/>
                <field name='model_id' groups="stock.group_stock_manager" widget="many2many_tags"/>

            </xpath>
        </field>
    </record>

    <record id="view_product_template_search_brand" model="ir.ui.view">
        <field name="name">product.template.search.brand</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="brand_id" groups="stock.group_stock_manager"/>
                <field name="model_id" groups="stock.group_stock_manager"/>
                <filter string="Brand" name="group by Brand" domain="[]"
                        context="{'group_by' : 'brand_id'}"/>
                <filter string="Model" name="group by Model" domain="[]"
                        context="{'group_by' : 'model_id'}"/>
                <separator/>
            </field>
        </field>
    </record>
</odoo>
