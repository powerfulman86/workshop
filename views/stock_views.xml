                    <div class="oe_title">
                        <label for="name" string="model Name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    <group string="Description">
